<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20.0dip"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="20.0dip"
    android:paddingBottom="15.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".OTP">

    <TextView
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="35.0dip"
        android:textColor="@color/Black"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_column="5"
        android:text="OTP Verification"
        android:layout_weight="0.67"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_row="7" />

    <RelativeLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/textView56">

        <Button
            android:textSize="16.0dip"
            android:textStyle="bold"
            android:layout_gravity="bottom|center"
            android:id="@+id/button28"
            android:layout_width="250.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="25.0dip"
            android:text="Verify"
            android:background="@drawable/button_background"
            android:textColor="@color/White"
            android:layout_below="@id/Resend"
            android:layout_centerHorizontal="true"
            android:textAlignment="gravity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We have send 4 digit OTP to"
                android:gravity="center"
                android:textSize="21sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="999999999"
                android:gravity="center"
                android:textSize="21sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayout6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:layout_marginTop="30.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <EditText
                android:textSize="30.0dip"
                android:textColor="@color/grey"
                android:id="@+id/editText3"
                android:background="@drawable/boundarygreylight"
                android:layout_width="wrap_content"
                android:layout_height="80.0dip"
                android:layout_marginTop="25.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="X"
                android:maxLines="1"
                android:maxLength="1"
                android:layout_weight="0.25"
                android:layout_alignParentTop="true"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <EditText
                android:textSize="30.0dip"
                android:textColor="@color/grey"
                android:id="@+id/editText34"
                android:background="@drawable/boundarygreylight"
                android:layout_width="wrap_content"
                android:layout_height="80.0dip"
                android:layout_marginTop="25.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="X"
                android:maxLines="1"
                android:maxLength="1"
                android:layout_weight="0.25"
                android:layout_alignParentTop="true"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_toEndOf="@id/editText3"
                android:layout_toRightOf="@id/editText3" />

            <EditText
                android:textSize="30.0dip"
                android:textColor="@color/grey"
                android:id="@+id/editText35"
                android:background="@drawable/boundarygreylight"
                android:layout_width="wrap_content"
                android:layout_height="80.0dip"
                android:layout_marginTop="25.0dip"
                android:layout_marginRight="5.0dip"
                android:hint="X"
                android:maxLines="1"
                android:maxLength="1"
                android:layout_weight="0.25"
                android:layout_alignParentTop="true"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_toEndOf="@id/editText34"
                android:layout_toRightOf="@id/editText34" />

            <EditText
                android:textSize="30.0dip"
                android:textColor="@color/grey"
                android:id="@+id/editText36"
                android:background="@drawable/boundarygreylight"
                android:layout_width="wrap_content"
                android:layout_height="80.0dip"
                android:layout_marginTop="25.0dip"
                android:hint="X"
                android:maxLines="1"
                android:maxLength="1"
                android:layout_weight="0.25"
                android:layout_alignParentTop="true"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_toEndOf="@id/editText35"
                android:layout_toRightOf="@id/editText35" />
        </LinearLayout>

        <Button
            android:textSize="12.0dip"
            android:textColor="@color/Black"
            android:id="@+id/Resend"
            android:background="@drawable/boundarywhitish"
            android:padding="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="10.0dip"
            android:text="Resend"
            android:layout_below="@id/linearLayout6"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</RelativeLayout>
