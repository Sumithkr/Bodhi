<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".School.RevisionFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="School name"
            android:textAlignment="center"
            android:textSize="21sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="16dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/RevisionFragment_Class"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:background="@drawable/spinner_background"
            android:elevation="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/RevisionFragment_Subject"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:background="@drawable/spinner_background"
            android:elevation="3dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.268">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revision Name :" />

            <EditText
                android:id="@+id/Revision_name"
                android:layout_marginLeft="10dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boundarywhitish"
                android:hint="Give Name">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :" />

            <EditText
                android:id="@+id/Revision_description"
                android:layout_marginLeft="35dp"
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:background="@drawable/boundarywhitish"
                android:gravity="top"
                android:hint="Write Something"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColorHint="#9C9A9A"
                android:textSize="16sp"
                tools:ignore="MissingConstraints">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Select file :" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/main_floating"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="top|start"
                        android:layout_marginRight="5dp"
                        android:elevation="20dp"
                        android:src="@drawable/add"
                        app:backgroundTint="@color/supporting"
                        app:pressedTranslationZ="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/RevisionFragment_pickvideo"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginRight="5dp"
                        android:elevation="20dp"
                        android:src="@drawable/upload_video_button"
                        android:visibility="invisible"
                        app:backgroundTint="@color/supporting"
                        app:pressedTranslationZ="20dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/otp_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/RevisionFragment_pickbook"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginRight="5dp"
                        android:elevation="20dp"
                        android:src="@drawable/upload_book_button"
                        android:visibility="invisible"
                        app:backgroundTint="@color/supporting"
                        app:pressedTranslationZ="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/audio_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/RevisionFragment_pickaudio"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="bottom|end"
                        android:elevation="20dp"
                        android:src="@drawable/upload_audio_button"
                        android:visibility="invisible"
                        app:backgroundTint="@color/supporting"
                        app:pressedTranslationZ="20dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center">
                <Button
                     android:id="@+id/RevisionFragment_upload"
                     android:layout_width="200dp"
                     android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textColor="@color/White"
                     android:text="Upload">

                 </Button>

     </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>